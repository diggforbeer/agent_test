# =============================================================================
# FriendShare.Api Development Dockerfile
# Optimized for hot reload and debugging
# =============================================================================

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS development

WORKDIR /src

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy project files for restore
COPY ["FriendShare.sln", "./"]
COPY ["src/FriendShare.Api/FriendShare.Api.csproj", "src/FriendShare.Api/"]
COPY ["src/FriendShare.Core/FriendShare.Core.csproj", "src/FriendShare.Core/"]
COPY ["src/FriendShare.Application/FriendShare.Application.csproj", "src/FriendShare.Application/"]
COPY ["src/FriendShare.Infrastructure/FriendShare.Infrastructure.csproj", "src/FriendShare.Infrastructure/"]

# Restore dependencies
RUN dotnet restore "src/FriendShare.Api/FriendShare.Api.csproj"

# Copy remaining source code
COPY ["src/", "src/"]

WORKDIR /src/src/FriendShare.Api

# Set environment variables for development
ENV ASPNETCORE_ENVIRONMENT=Development
ENV ASPNETCORE_URLS=http://+:8080
ENV DOTNET_USE_POLLING_FILE_WATCHER=1
ENV DOTNET_WATCH_RESTART_ON_RUDE_EDIT=1

# Expose ports
EXPOSE 8080

# Run with hot reload using dotnet watch
ENTRYPOINT ["dotnet", "watch", "run", "--no-restore", "--urls", "http://+:8080"]
