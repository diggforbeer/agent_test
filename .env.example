# =============================================================================
# FriendShare Environment Variables
# SECURITY: Copy this file to .env and update ALL values before use
# NEVER commit .env file to version control
# =============================================================================

# PostgreSQL Database Configuration
# SECURITY: Change these values to unique, strong credentials
POSTGRES_USER=<YOUR_USERNAME_HERE>
POSTGRES_PASSWORD=<YOUR_SECURE_PASSWORD_MIN_16_CHARS>
POSTGRES_DB=friendshare

# ASP.NET Core Environment
# Values: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# JWT Authentication Configuration
# SECURITY: Generate a secure random key at least 32 characters long
JWT_SECRET_KEY=<YOUR_SECURE_JWT_SECRET_KEY_MIN_32_CHARS>
JWT_ISSUER=FriendShare
JWT_AUDIENCE=FriendShareUsers
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7
