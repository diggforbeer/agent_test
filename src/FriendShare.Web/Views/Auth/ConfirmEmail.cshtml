@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5 text-center">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="text-success mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                            </svg>
                        </div>
                        <h2 class="mb-3">Email Confirmed!</h2>
                        <p class="text-muted mb-4">@ViewBag.SuccessMessage</p>
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-primary">Go to Login</a>
                    }
                    else if (ViewBag.ErrorMessage != null)
                    {
                        <div class="text-danger mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                            </svg>
                        </div>
                        <h2 class="mb-3">Confirmation Failed</h2>
                        <p class="text-muted mb-4">@ViewBag.ErrorMessage</p>
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-primary">Go to Login</a>
                    }
                    else
                    {
                        <h2 class="mb-3">Confirming Your Email...</h2>
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
